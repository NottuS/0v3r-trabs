SRC = $(wildcard *.cu)
OBJ = $(SRC:.cu=.o)
NVCC = /usr/local/cuda-6.5/bin/nvcc
CUDACOMP = -gencode arch=compute_20,code=compute_20 -gencode arch=compute_20,code=sm_21
NVCCFLAGS = -G -g -O0 --compile $(CUDACOMP) 
TARGET = gpuSURF.a

.PHONY: all clean
all: $(OBJ) 
	@cd lib
	$(NVCC) -lib $(OBJ) -o $(TARGET)
	$(NVCC) $(NVCCFLAGS) test.a
		
%.o: %.cu
	@mkdir -p lib
	@echo 'Building file: $<'
	@echo 'Invoking: NVCC Compiler'
	$(NVCC) $(NVCCFLAGS) -x cu -o lib/$@ $< 
	@echo 'Finished building: $<'
	@echo ' '

clean:
	@rm -rf  lib *.o *~