SRC = $(wildcard *.cpp)
OBJ = $(SRC:.cpp=.o)
EXEC = bin/parallelsurf
CC = g++
CFLAGS = `pkg-config --cflags opencv`
LIBS = `pkg-config --libs opencv`



.PHONY: all clean mrproper
all: $(EXEC)
	@echo $(gpuSURF)

$(EXEC): $(OBJ)
	mkdir -p bin
	@cd bin && $(CC) -o $@ $(OBJ)  

%.o: %.cpp
	mkdir -p lib
	$(CC) $(CFLAGS) $(LIBS) -o $@ -c $<

clean:
	rm -rf lib *.o *~
	
mrproper:
	rm -rf $(EXEC)